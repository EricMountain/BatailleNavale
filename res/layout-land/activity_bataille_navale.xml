<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BatailleNavale" >

    <Button
        android:id="@+id/actionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ViewOwnCheckBox"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/ok" />

    <RelativeLayout
        android:id="@+id/RelativeLayoutCells"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/actionButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/actionButton"
        android:background="#ffffff" >

    </RelativeLayout>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/actionButton"
        android:layout_alignLeft="@+id/actionButton"
        android:layout_alignRight="@+id/actionButton"
        android:text="@string/reset" />

    <CheckBox
        android:id="@+id/ViewOwnCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/resetButton"
        android:layout_alignParentRight="true"
        android:text="@string/view_own_board"
        android:textAppearance="?android:attr/textAppearanceInverse"
        android:textColor="#ffffffff" />

    <TextView
        android:id="@+id/actionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ViewOwnCheckBox"
        android:layout_alignRight="@+id/ViewOwnCheckBox"
        android:layout_alignTop="@+id/RelativeLayoutCells"
        android:text="@string/dummy"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFFFF" />

</RelativeLayout>